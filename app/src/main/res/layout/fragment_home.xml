<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1A4E79"
    tools:context=".fragment.HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/home_fragment"
        />

      <ImageView
          android:id="@+id/card_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="20dp"
          app:layout_constraintRight_toRightOf="parent"
          android:src="@drawable/codial"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:translationY="70sp"
        app:cardElevation="10dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/card_1"
        app:layout_constraintLeft_toLeftOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1A4E79"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mentor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ECB81E"
                android:text="Kurslar"
                android:textSize="25sp"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_width="140dp"
        android:layout_height="120dp"
        app:cardElevation="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:translationY="110dp"
        app:layout_constraintTop_toBottomOf="@id/card_view2"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1A4E79"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guruh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guruhlar"
                android:textColor="#ECB81E"
                android:textSize="25sp"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_mentor"
        android:layout_width="140dp"
        android:layout_height="120dp"
        app:cardElevation="10dp"
        android:layout_marginEnd="20dp"
        android:translationY="145dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view3"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1A4E79"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guruh"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentorlar"
                android:textColor="#ECB81E"
                android:textSize="25sp"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>



   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Codial.uz"
       android:textColor="@color/white"
       android:layout_margin="15dp"
       app:layout_constraintLeft_toLeftOf="parent"
       android:textSize="25sp"

       app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>